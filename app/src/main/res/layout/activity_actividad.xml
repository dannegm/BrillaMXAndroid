<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="mx.ambmultimedia.brillamexico.Actividad"

    android:id="@+id/drawer_layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include android:id="@+id/app_bar" layout="@layout/app_bar" />

        <mx.ambmultimedia.brillamexico.SlidingTabLayout
            android:id="@+id/activityTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/activityPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </android.support.v4.view.ViewPager>

    </LinearLayout>


    <fragment
        android:id="@+id/navDrawer"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"

        app:layout="@layout/fragment_nav_drawer"
        android:name="mx.ambmultimedia.brillamexico.NavDrawerFrag"
        tools:layout="@layout/fragment_nav_drawer">

    </fragment>
</android.support.v4.widget.DrawerLayout>
