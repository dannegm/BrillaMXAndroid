<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="mx.ambmultimedia.brillamexico.Noticias"

    android:id="@+id/drawer_layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include android:id="@+id/app_bar" layout="@layout/app_bar" />

        <com.cuneytayyildiz.widget.PullRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_below="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <mx.ambmultimedia.brillamexico.ExtendableListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/g_trans"
                    android:id="@+id/listNoticias" />

            </LinearLayout>

        </ScrollView>

        </com.cuneytayyildiz.widget.PullRefreshLayout>

    </RelativeLayout>

    <fragment
        android:id="@+id/navDrawer"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"

        app:layout="@layout/fragment_nav_drawer"
        android:name="mx.ambmultimedia.brillamexico.NavDrawerFrag"
        tools:layout="@layout/fragment_nav_drawer">

    </fragment>
</android.support.v4.widget.DrawerLayout>
