<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="mx.ambmultimedia.brillamexico.activities.LoginTest"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bmx_purple">

    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/avatar_placeholder"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:id="@+id/twitterAvatar" />

        <com.twitter.sdk.android.core.identity.TwitterLoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="54dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/twitterName"
        android:layout_below="@+id/twitterAvatar"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:textColor="@color/c_text_white"
        android:gravity="center"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/twitterUser"
        android:textColor="#aaffffff"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_below="@+id/twitterName"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
