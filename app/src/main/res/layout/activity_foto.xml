<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"

    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="mx.ambmultimedia.brillamexico.MainActivity">

        <include android:id="@+id/app_bar" layout="@layout/app_bar" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/c_text_dark"
            android:layout_below="@+id/app_bar"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="340dp"
                    android:layout_alignParentTop="true"
                    android:id="@+id/imageFrame" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="340dp"
                    android:layout_alignParentTop="true"
                    android:id="@+id/imageCamera"
                    />
            </RelativeLayout>


            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"

                fab:fab_icon="@drawable/ic_camera"
                fab:fab_colorNormal="@color/c_text_link_2"
                fab:fab_colorPressed="@color/bmx_magenta" />

        </LinearLayout>

    </RelativeLayout>

    <fragment
        android:id="@+id/navDrawer"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"

        app:layout="@layout/fragment_nav_drawer"
        android:name="mx.ambmultimedia.brillamexico.NavDrawerFrag"
        tools:layout="@layout/fragment_nav_drawer">

    </fragment>

</android.support.v4.widget.DrawerLayout>