<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="mx.ambmultimedia.brillamexico.Emprendedores"

    android:id="@+id/drawer_layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include android:id="@+id/app_bar" layout="@layout/app_bar" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/app_bar"
            android:id="@+id/scrollView2"
            android:background="@color/g_bg">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:elevation="1dp"
                    android:id="@+id/toEmp1"
                    android:background="@color/g_white"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView5"
                        android:src="@drawable/emp_1_mini"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jahir Mojica"
                            android:id="@+id/textView2"
                            android:textSize="20sp"
                            android:textColor="@color/bmx_purple" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SUEMA"
                            android:id="@+id/textView10"
                            android:textColor="@color/bmx_aqua"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fundador y CEO de Sustentabilidad  en Energía y Medio Ambiente S.A."
                            android:id="@+id/textView13"
                            android:textColor="@color/c_text_gray"
                            android:textSize="16sp"
                            android:singleLine="false"
                            android:lines="2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MÁS INFORMACIÓN"
                            android:id="@+id/textView14"
                            android:layout_gravity="right"
                            android:textColor="@color/bmx_pink"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:elevation="1dp"
                    android:id="@+id/toEmp2"
                    android:background="@color/g_white"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView5"
                        android:src="@drawable/emp_2_mini"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Abraham Chetewy"
                            android:id="@+id/textView2"
                            android:textSize="20sp"
                            android:textColor="@color/bmx_purple" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Somerset Technologies"
                            android:id="@+id/textView10"
                            android:textColor="@color/bmx_aqua"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tiene especial interés en el desarrollo de tecnologías renovables."
                            android:id="@+id/textView13"
                            android:textColor="@color/c_text_gray"
                            android:textSize="16sp"
                            android:singleLine="false"
                            android:lines="2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MÁS INFORMACIÓN"
                            android:id="@+id/textView14"
                            android:layout_gravity="right"
                            android:textColor="@color/bmx_pink"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:elevation="1dp"
                    android:id="@+id/toEmp3"
                    android:background="@color/g_white"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView5"
                        android:src="@drawable/emp_3_mini"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Francisco X. Villaseñor"
                            android:id="@+id/textView2"
                            android:textSize="20sp"
                            android:textColor="@color/bmx_purple" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carbon Diversion América Latina"
                            android:id="@+id/textView10"
                            android:textColor="@color/bmx_aqua"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Se ha dedicado al estudio e investigación de biocombustibles."
                            android:id="@+id/textView13"
                            android:textColor="@color/c_text_gray"
                            android:textSize="16sp"
                            android:singleLine="false"
                            android:lines="2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MÁS INFORMACIÓN"
                            android:id="@+id/textView14"
                            android:layout_gravity="right"
                            android:textColor="@color/bmx_pink"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <fragment
        android:id="@+id/navDrawer"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"

        app:layout="@layout/fragment_nav_drawer"
        android:name="mx.ambmultimedia.brillamexico.NavDrawerFrag"
        tools:layout="@layout/fragment_nav_drawer">

    </fragment>
</android.support.v4.widget.DrawerLayout>