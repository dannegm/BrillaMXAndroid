<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mx.ambmultimedia.brillamexico.activities.Logro"
    android:background="@color/bmx_pink"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/g_white"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/relativeLayout2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â¡Genial!"
                android:id="@+id/textView22"
                android:textColor="@color/bmx_purple"
                android:textSize="36sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nameLogro"
                android:textColor="@color/c_text_oxford"
                android:textSize="20sp"
                android:padding="8dp"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 puntos"
                android:id="@+id/pointsLogro"
                android:textSize="32sp"
                android:textColor="@color/bmx_lemon"
                android:gravity="center"
                android:padding="8dp" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/iconLogro"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:focusable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:id="@+id/toContinue"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:textColor="@color/bmx_purple"
        android:background="@color/bmx_lemon"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginTop="16dp" />

</RelativeLayout>
