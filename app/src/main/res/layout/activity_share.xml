<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"

    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="mx.ambmultimedia.brillamexico.MainActivity">

        <include android:id="@+id/app_bar" layout="@layout/app_bar" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:layout_below="@+id/app_bar">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_height="300dp"
                    android:id="@+id/imageSelfie"
                    android:src="@drawable/selfie"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pie de Foto"
                    android:textColor="@color/bmx_magenta"
                    android:id="@+id/textView1"
                    android:layout_marginBottom="4dp"
                    android:textSize="20dp"
                    android:layout_weight="6"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentRight="false"
                    android:layout_alignWithParentIfMissing="false"
                    android:editable="true"
                    android:layout_below="@+id/imageSelfie"
                    android:paddingTop="15dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="5dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="90dp"
                    android:id="@+id/editText"
                    android:textColor="@color/c_text_oxford"
                    android:textColorHint="@color/c_text_gray"
                    android:hint="Hice un compromiso #MiSelfieBrilla"
                    android:backgroundTint="@color/c_text_gray"
                    android:gravity="top"
                    android:layout_below="@+id/textView1"
                    android:layout_alignLeft="@+id/imageSelfie"
                    android:layout_alignStart="@+id/imageSelfie"
                    android:layout_alignRight="@+id/imageSelfie"
                    android:layout_alignEnd="@+id/imageSelfie" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bmx_pistache"
                    android:textColor="@color/g_white"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/editText"
                    android:text="COMPARTIR"
                    android:id="@+id/button"
                    android:layout_alignParentStart="false" />

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

    <fragment
        android:id="@+id/navDrawer"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"

        app:layout="@layout/fragment_nav_drawer"
        android:name="mx.ambmultimedia.brillamexico.NavDrawerFrag"
        tools:layout="@layout/fragment_nav_drawer">

    </fragment>

</android.support.v4.widget.DrawerLayout>